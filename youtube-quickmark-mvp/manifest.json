{
    "manifest_version": 3,
    "name": "YouTube QuickMark MVP",
    "version": "0.1.0",
    "description": "MVP for quickly capturing timestamps in YouTube videos.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "commands"
    ],
    "host_permissions": [
      "*://*.youtube.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "commands": {
      "capture_timestamp": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y"
        },
        "description": "Capture current YouTube video timestamp"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }